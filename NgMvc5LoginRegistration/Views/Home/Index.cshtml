@{ 
    ViewBag.Title = "Registration page using Angular";
}


@section Scripts{
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/registrationApp/registrationApp.js"></script>
    <script src="~/Scripts/registrationApp/registrationController.js"></script>
}

<style>
    /*.center{
        margin-top: 25px;
        width: 50%;
        border: 3px solid green;
        padding: 10px;       
    }*/

    .panel-heading{
        font-weight: 700;
        text-align: center;
    }
    .center{
        margin: auto;
        margin-top: 25px;
        width:600px;
    }
</style>
<div class="center" ng-app="registrationApp" ng-controller="registrationController">
    <div class="panel panel-info">
        <div class="panel-heading">
            Registration Form
        </div>
        <div class="panel-body">
            <form novalidate name="f1" ng-submit="SaveData(User)" class="form-horizontal">
                <div class="form-group">
                    <label class="text text-info col-md-offset-2">Full Name : </label>
                    <input type="text" ng-model="User.FullName" class="form-control col-md-offset-2" name="FullName" ng-class="submitted?'ng-dirty':''" required autofocus />
                    <span class="error col-md-offset-2" ng-show="(f1.FullName.$dirty || submitted) && f1.FullName.$error.required">Full name required</span>
                </div>
                <div class="form-group">
                    <label class="text text-info col-md-offset-2">Email : </label>
                    <input type="email" ng-model="User.Email" class="form-control col-md-offset-2" name="Email" ng-class="submitted?'ng-dirty':''" required />
                    <span class="error col-md-offset-2" ng-show="(f1.Email.$dirty || submitted) && f1.Email.$error.required">Full name required</span>
                </div>
                <div class="form-group">
                    <label class="text text-info col-md-offset-2">User Name : </label>
                    <input type="text" ng-model="User.MemberName" class="form-control col-md-offset-2" name="MemberName" ng-class="submitted?'ng-dirty':''" required />
                    <span class="error col-md-offset-2" ng-show="(f1.MemberName.$dirty || submitted) && f1.MemberName.$error.required">User name required</span>
                </div>
                <div class="form-group">
                    <label class="text text-info col-md-offset-2">Password : </label>
                    <input type="password" ng-model="User.Password" class="form-control col-md-offset-2" name="Password" ng-class="submitted?'ng-dirty':''" required />
                    <span class="error col-md-offset-2" ng-show="(f1.Password.$dirty || submitted) && f1.Password.$error.required">Password required</span>
                </div>
                <div class="form-group">
                    <label class="text text-info col-md-offset-2">Gender : </label>
                    <input type="radio" ng-model="User.Gender" class="col-md-offset-2" name="gender" value="Male" required /> Male
                    <input type="radio" ng-model="User.Gender" class="col-md-offset-2" name="gender" value="Male" required /> Female
                    <span class="error col-md-offset-2" ng-show="(f1.Gender.$dirty || submitted) && f1.Gender.$error.required">Gender required</span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input type="submit" class="btn btn-success col-md-offset-2" value="{{submitText}}"/>
                </div>
            </form>
        </div>
        <div class="panel-footer">
            &copy; Goodsean
        </div>
    </div>
</div>
